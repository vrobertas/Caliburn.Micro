<navigation:Page x:Class="Features.CrossPlatform.Views.ExecuteView" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="ExecuteView Page">
    <Grid x:Name="LayoutRoot">
        <StackPanel Margin="40,20" Width="600" HorizontalAlignment="Left">
            <CheckBox x:Name="Safe" Content="Safe (use Execute.OnUIThread)"/>
            <Button x:Name="StartBackgroundWork" Content="Start background work"/>
            <TextBlock x:Name="Output"/>
        </StackPanel>
    </Grid>
</navigation:Page>
