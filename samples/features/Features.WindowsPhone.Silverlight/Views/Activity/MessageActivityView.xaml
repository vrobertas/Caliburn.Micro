<UserControl x:Class="Features.CrossPlatform.Views.Activity.MessageActivityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Ellipse Grid.Column="0" Width="48" Height="48" Fill="{StaticResource BackgroundBrush}" Margin="0,0,12,0" VerticalAlignment="Top" />

        <StackPanel Grid.Column="1">
            <TextBlock x:Name="Title" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock x:Name="Message" Style="{StaticResource PhoneTextSubtleStyle}"/>
        </StackPanel>

    </Grid>
</UserControl>