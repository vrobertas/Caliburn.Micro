<UserControl
    x:Class="Features.CrossPlatform.Views.Activity.MessageActivityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Ellipse Grid.Column="0" Width="60" Height="60" Fill="{StaticResource BackgroundBrush}" Margin="0,0,10,0" VerticalAlignment="Top" />

        <StackPanel Grid.Column="1">
            <TextBlock x:Name="Title" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock x:Name="Message" Style="{StaticResource BodyTextBlockStyle}"/>
        </StackPanel>

    </Grid>
</UserControl>
